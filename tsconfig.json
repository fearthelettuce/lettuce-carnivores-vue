{
  "references": [
    // { //this is breaking stuff, no idea why but commenting it makes the red squigglies go away.  Deal with it later
    //   "path": "./tsconfig.node.json"
    // },
    {
      "path": "./tsconfig.app.json"
    },
    {
      "path": "./tsconfig.vitest.json"
    }
  ],
  "compilerOptions": {
    "resolveJsonModule": true,
    "module": "es2022",
    "moduleResolution": "nodenext",
    "esModuleInterop": true,
    "ignoreDeprecations": "5.0",
    "baseUrl": "./",
    "paths": {
      "@/*": ["src/*"]
    },
  },
  
  "include": [
    "src/**/*.ts",
    "src/**/*.tsx",
    "src/**/*.vue",
    "src/**/*.json",
    "tests/**/*.ts",
    "tests/**/*.tsx",
  ],
  "exclude": [
    "node_modules"
  ]
}
